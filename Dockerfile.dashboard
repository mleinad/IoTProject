FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    streamlit \
    paho-mqtt \
    pandas \
    plotly

# Copy dashboard files
COPY Dashboard /app/dashboard

# Expose Streamlit port
EXPOSE 8501

# Run Streamlit
CMD ["streamlit", "run", "/app/dashboard/streamlit_dashboard.py", "--server.port=8501", "--server.address=0.0.0.0"]
